{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": false,
        "declarationDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "node_modules",
        "dist",
        "demo",
        "tests"
    ]
}